    <div class="container">
        <div class="card" id="start-screen">
            <h1>S·∫µn s√†ng ch∆∞a?</h1>
            <p>H·ªá th·ªëng s·∫Ω l·∫•y ng·∫´u nhi√™n 5 c√¢u h·ªèi kh√¥ng tr√πng l·∫∑p.</p>
            <button class="btn-primary" onclick="startGame()">B·∫Øt ƒë·∫ßu ngay</button>
        </div>

        <div class="card hidden" id="quiz-screen">
            <div class="progress" id="progress">C√¢u h·ªèi 1/5</div>
            <h3 id="question-text">ƒêang t·∫£i...</h3>
            <div class="answer-list" id="answer-list"></div>
            <div id="status"></div>
            <button id="next-btn" class="hidden" onclick="renderCurrentQuestion()">Ti·∫øp theo</button>
        </div>

        <div class="card hidden" id="result-screen">
            <h1>K·∫øt qu·∫£ c·ªßa b·∫°n</h1>
            <div class="score-text" id="final-score">0/5</div>
            <p id="result-msg"></p>
            <button class="btn-primary" onclick="location.reload()">Ch∆°i l·∫°i</button>
        </div>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getDatabase, ref, get } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js";

        const firebaseConfig = {
            apiKey: "AIzaSyAMycdJcRR1Kl53wrJQbQ9dw-xSfpOym_4",
            authDomain: "lichnghi2.firebaseapp.com",
            databaseURL: "https://lichnghi2-default-rtdb.firebaseio.com",
            projectId: "lichnghi2",
            storageBucket: "lichnghi2.firebasestorage.app",
            messagingSenderId: "534827443513",
            appId: "1:534827443513:web:003b8b9d8132f9e6cc74e8"
        };

        const app = initializeApp(firebaseConfig);
        const db = getDatabase(app);

        let selectedQuestions = []; 
        let currentIndex = 0;
        let score = 0;

        window.startGame = async () => {
            const startBtn = document.querySelector('#start-screen button');
            startBtn.innerText = "ƒêang t·∫£i...";
            startBtn.disabled = true;

            try {
                const dbRef = ref(db, 'questions');
                const snapshot = await get(dbRef);
                
                if (snapshot.exists()) {
                    const data = snapshot.val();
                    let all = Object.values(data);
                    selectedQuestions = all.sort(() => 0.5 - Math.random()).slice(0, 5);
                    
                    document.getElementById('start-screen').classList.add('hidden');
                    document.getElementById('quiz-screen').classList.remove('hidden');
                    renderCurrentQuestion();
                } else {
                    alert("Database tr·ªëng!");
                }
            } catch (e) {
                console.error(e);
                alert("L·ªói k·∫øt n·ªëi Firebase!");
            }
        };

        window.renderCurrentQuestion = () => {
            if (currentIndex >= selectedQuestions.length) {
                showResult();
                return;
            }

            const q = selectedQuestions[currentIndex];
            document.getElementById('progress').innerText = `C√¢u h·ªèi ${currentIndex + 1}/5`;
            document.getElementById('question-text').innerText = q.question;
            document.getElementById('status').innerText = '';
            document.getElementById('next-btn').classList.add('hidden');

            const answerList = document.getElementById('answer-list');
            answerList.innerHTML = '';

            q.answers.forEach((ans) => {
                const btn = document.createElement('button');
                btn.className = 'answer-btn';
                btn.innerText = ans.text;
                btn.onclick = () => checkAnswer(btn, ans.isCorrect, q.answers);
                answerList.appendChild(btn);
            });
        };

        function checkAnswer(selectedBtn, isCorrect, allAnswers) {
            const btns = document.querySelectorAll('.answer-btn');
            btns.forEach(b => b.disabled = true);

            const status = document.getElementById('status');
            if (isCorrect) {
                selectedBtn.classList.add('correct');
                status.innerText = "Ch√≠nh x√°c! ‚ú®";
                status.style.color = "var(--success)";
                score++;
            } else {
                selectedBtn.classList.add('wrong');
                status.innerText = "Sai m·∫•t r·ªìi! üò¢";
                status.style.color = "var(--danger)";
                btns.forEach((b, idx) => {
                    if (allAnswers[idx].isCorrect) b.classList.add('correct');
                });
            }

            currentIndex++;
            document.getElementById('next-btn').classList.remove('hidden');
            if (currentIndex === 5) {
                document.getElementById('next-btn').innerText = "Xem k·∫øt qu·∫£";
            }
        }

        function showResult() {
            document.getElementById('quiz-screen').classList.add('hidden');
            document.getElementById('result-screen').classList.remove('hidden');
            document.getElementById('final-score').innerText = `${score}/5`;
            const msg = score >= 3 ? "L√†m t·ªët l·∫Øm! üëè" : "C·ªë g·∫Øng h∆°n l·∫ßn sau nh√©! üí™";
            document.getElementById('result-msg').innerText = msg;
        }
    </script>
